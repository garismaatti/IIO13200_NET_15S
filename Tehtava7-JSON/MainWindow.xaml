<Window x:Class="Tehtava7_JSON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava7_JSON"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnGetJson" Content="Get JSON" HorizontalAlignment="Left" Margin="432,10,0,0" VerticalAlignment="Top" Width="75" Click="btnGetJson_Click"/>
        <TextBox x:Name="txtJson" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="http://student.labranet.jamk.fi/~salesa/mat/JsonTest" VerticalAlignment="Top" Width="417"/>
        <DataGrid x:Name="dgData" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Height="265" Width="497" ItemsSource="{Binding}"/>
        <Label x:Name="lbError" Content="" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
